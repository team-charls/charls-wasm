{
  "name": "charls-wasm-dev",
  "private": true,
  "description": "Development workspace for CharLS WebAssembly - High-performance JPEG-LS codec",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:debug": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/test/unit/**/*.test.js"],
    "transform": {}
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/team-charls/charls-wasm.git"
  },
  "author": "Team CharLS",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/team-charls/charls-wasm/issues"
  },
  "homepage": "https://github.com/team-charls/charls-wasm#readme",
  "devDependencies": {
    "jest": "^30.2.0"
  }
}
